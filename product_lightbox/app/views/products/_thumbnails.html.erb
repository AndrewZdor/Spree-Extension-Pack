<% if !product.images.empty? %>
<% content_for :head do -%>
<%= javascript_include_tag 'jquery.lightbox.js' %>
<%= stylesheet_link_tag 'lightbox.css' %>
<% end -%>
<script type="text/javascript">
$(function() {
	$('#gallery a').lightBox();
});
</script>
<div id="gallery">
	<ul>
		<% product.images.each do |i| -%>
		<li>
			<a href="/assets/products/<%= i.id %>/original/<%= i.attachment_file_name %>" title="<%= product.name %>">
				<%= image_tag(i.attachment.url)%>
			</a>
		</li>
		<% end -%>
	</ul>
</div>
<% end %>
